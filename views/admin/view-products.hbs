<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-">Add Product</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td><img src="{{this._id}}.jpg" style="height: 100px;" alt=""></td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>

                    <td>
                        <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
                        
                        <a class="btn btn-danger" href="/admin/delete-product?id={{this._id}}"
                           onclick="return confirm('Are you sure you want to delete {{this.Name}}')">Delete</a>
                    </td>

                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>