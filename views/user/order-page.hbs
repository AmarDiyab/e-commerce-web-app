<section>
    <div class="container mt-5">
        <form action="/order-page" method="post" id="checkout-form">
            <div class="row">
                <div class="col-md-4">
                    <h2>Delivery Details</h2><br>

                    <div>
                        <label for="address">Address</label>
                        <input type="description" class="form-control" id="address" name="address"><br>

                        <label for="pincode">Pincode</label>
                        <input type="text" class="form-control" id="pincode" name="pincode"><br>

                        <label for="Mobile">Mobile</label>
                        <input type="text" class="form-control" id="mobile" name="mobile"><br>

                        <input type="text" name="userId" value="{{user._id}}" hidden>
                    </div>
                </div>
            </div>

            <div class="checkout mt-3">
                <h2>Payment Method</h2><br>
                <h5>TOTAL AMOUNT : &nbsp;â‚¹ {{total}} </h5>
                <div class="mt-3">
                    <input type="radio" value="cod" name="payment">
                    <label for="cod" class="ml-2"> Cash On Delivery</label><br>

                    <input type="radio" value="online-pay" name="payment">
                    <label for="online-pay" class="ml-2">Online Payment</label>
                </div>
            </div>
            <button type="submit" class="btn btn-success font-weight-bold mt-3" style="width: 160px;" >Order</button>
        </form>
    </div>
</section>